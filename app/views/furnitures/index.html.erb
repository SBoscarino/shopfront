<head>
<%= stylesheet_link_tag "admin" %>
</head>

<body id="body">

<h1>Listing All Items</h1>
 

<button><%= link_to 'Add Another', new_furniture_path %></button>


  <% @furnitures.each do |furniture| %>
    <div class="item">
      <div class="infoSection">
        <h2 class="itemTitle"><%= furniture.name %><h2>
        <h3><%= furniture.sku %></h3>
        <h3><%= furniture.category %></h3>
      </div>
      <div class="buttonSection">
        <button><%= link_to 'More Details', furniture_path(furniture) %></button>
        <button><%= link_to 'Make Changes', edit_furniture_path(furniture) %></button>
        <button><%= link_to 'Delete Item', furniture_path(furniture),
                method: :delete,
                data: { confirm: 'Are you POSITIVE that you want to delete this?' } %></h4>
        </button>
      </div>
    </div>
  <% end %>
  
  </body>

